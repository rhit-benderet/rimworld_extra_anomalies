<Defs>
    <ThingDef ParentName="AEResearchNotesBase">
		<defName>EA_ResearchNotesMI</defName>
		<label>research note #PV01</label>
		<comps>
			<li Class="CompProperties_CompAnalyzableUnlockResearch">
				<analysisID>1515001</analysisID>

				<!-- Analyzable -->

				<analysisDurationHours>4</analysisDurationHours>
				<destroyedOnAnalyzed>true</destroyedOnAnalyzed>
				<completedLetterLabel>Phthoravirus research note studied: {RESEARCH} unlocked</completedLetterLabel>
				<completedLetter>By studying research note, {PAWN_labelShort} has acquired the insight needed for the research project(s) {RESEARCH}.\n\nYour researchers can now begin researching how to actually use the technology.</completedLetter>
				<completedLetterDef>PositiveEvent</completedLetterDef>

				<!-- Interactable -->

				<activateTexPath>UI/Icons/Study</activateTexPath>

				<activateLabelString>Analyze...</activateLabelString>
				<activateDescString>Analyze the research note.</activateDescString>
				<jobString>Analyze research note</jobString>
				<guiLabelString>Choose who should analyze this</guiLabelString>
				<inspectString>Can be analyzed by a colonist.</inspectString>

				<targetingParameters>
					<canTargetBuildings>false</canTargetBuildings>
					<canTargetAnimals>false</canTargetAnimals>
					<canTargetMechs>false</canTargetMechs>
					<onlyTargetControlledPawns>true</onlyTargetControlledPawns>
				</targetingParameters>
			</li>
		</comps>
	</ThingDef>
</Defs>